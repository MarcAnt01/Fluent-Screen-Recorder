<Page
    x:Class="FluentScreenRecorder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentScreenRecorder"
    xmlns:strings="using:FluentScreenRecorder.Strings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" xmlns:media="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}"
    SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConv"/>
        <DataTemplate x:Key="ImageTemplate">
            <StackPanel>
                <TextBlock Text="{Binding fileN}" HorizontalAlignment="Center" Margin="0,0,0,-16"/>
                <Image Stretch="UniformToFill" Source="{Binding img}" Width="190" Height="130" Margin="20" Tapped="Image_Tapped"/>
            </StackPanel>
        </DataTemplate>
        <media:AcrylicBrush x:Key="CustomAcrylicBackgroundBrushStrong" TintColor="{StaticResource SystemChromeAltHighColor}" BackgroundSource="HostBackdrop" FallbackColor="{StaticResource SystemChromeMediumColor}" TintOpacity="0.7"/>
        <media:AcrylicBrush x:Key="CustomAcrylicBackgroundBrushWeak" TintColor="{StaticResource SystemChromeAltHighColor}" BackgroundSource="HostBackdrop" FallbackColor="{StaticResource SystemChromeMediumColor}" TintOpacity="0.5"/>
    </Page.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <Grid x:Name="TopBar" Grid.Row="0" Height="32" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn"
                                  Width="0" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition x:Name="RightPaddingColumn"
                                  Width="0" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="UserLayout"
                  Background="Transparent"
                  Grid.Column="1">
                <TextBlock Text="Fluent Screen Recorder"
                           VerticalAlignment="Center"
                           Grid.Column="1"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Margin="12,4,4,4" />
            </Grid>
            <Button  x:Name="OverlayButton"
                     Click="OverlayButton_Click"
                     VerticalAlignment="Stretch"
                     Grid.Column="2">
                <StackPanel>
                    <FontIcon x:Name="GoToOverlayIcon"
                              Glyph="&#xEE49;"
                              FontSize="16"
                              ToolTipService.ToolTip="{x:Bind strings:Resources.GoToOverlay}" />
                    <FontIcon x:Name="ExitOverlayIcon"
                              Glyph="&#xEE47;"
                              FontSize="16 "
                              ToolTipService.ToolTip="{x:Bind strings:Resources.ExitOverlay}" />
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FirstColumn"/>
                <ColumnDefinition Width="4*" x:Name="SecondColumn"/>
                <ColumnDefinition Width="2*" x:Name="ThirdColumn"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{ThemeResource CustomAcrylicBackgroundBrushWeak}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="Ellipse" HorizontalAlignment="Center" Fill="Red" Width="15" Height="15" Margin="0,0,5,-10"/>
                        <TextBlock x:Name="MainTextBlock" HorizontalTextAlignment="Center" FontSize="30"/>
                    </StackPanel>
                    <ToggleButton  x:Name="MainButton" HorizontalAlignment="Center" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Width="100" Height="100" Background="{ThemeResource SystemAccentColor}" CornerRadius="99">
                        <StackPanel HorizontalAlignment="Center">
                            <FontIcon x:Name="RecordIcon" FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular" Glyph="&#xF84E;" FontSize="70" Foreground="White"/>
                            <FontIcon x:Name="StopIcon"  FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular" Glyph="&#xF72B;" FontSize="50" Foreground="White"/>
                        </StackPanel>
                    </ToggleButton>
                    <muxc:ProgressRing x:Name="MergingProgressRing" Value="0" IsIndeterminate="False" Margin="10" Width="70" Height="70"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Background="{ThemeResource CustomAcrylicBackgroundBrushStrong}">
                <GridView x:Name="BasicGridView" ItemTemplate="{StaticResource ImageTemplate}" SelectionMode="Single" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,32,0,0"/>
            </Grid>

            <Grid Grid.Column="2" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <ScrollViewer>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150">

                        <ComboBox x:Name="ResolutionComboBox" Header="{x:Bind strings:Resources.Resolution}" Margin="8" MinWidth="150" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=UseCaptureItemToggleSwitch, Path=IsOn, Converter={StaticResource InvertBoolConv}}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="local:ResolutionItem">
                                    <TextBlock Text="{x:Bind DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox x:Name="FrameRateComboBox" Header="{x:Bind strings:Resources.Framerate}"  Margin="8" MinWidth="150" HorizontalAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="local:FrameRateItem">
                                    <TextBlock Text="{x:Bind DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox x:Name="BitrateComboBox" Header="{x:Bind strings:Resources.Bitrate}" Margin="8" MinWidth="150" HorizontalAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="local:BitrateItem">
                                    <TextBlock Text="{x:Bind DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ToggleSwitch x:Name="UseCaptureItemToggleSwitch" Header="{x:Bind strings:Resources.SourceSizeToggle}" Margin="8" MaxWidth="150" IsOn="True" HorizontalAlignment="Center"/>
                        <ToggleSwitch x:Name="PreviewToggleSwitch" Header="{x:Bind strings:Resources.VideoPreview}" Margin="8" MaxWidth="150" IsOn="True" HorizontalAlignment="Center"/>
                        <ToggleSwitch x:Name="AudioToggleSwitch" Header="{x:Bind strings:Resources.InternalAudio}" Margin="8" MaxWidth="150" IsOn="True" HorizontalAlignment="Center"/>
                        <ToggleSwitch x:Name="ExtAudioToggleSwitch" Header="{x:Bind strings:Resources.ExternalAudio}" Margin="8" MaxWidth="150" IsOn="True" HorizontalAlignment="Center"/>
                        
                        <muxc:Expander>
                            <muxc:Expander.Header>                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <FontIcon FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular" Glyph="&#xF6A9;"/>
                                    <TextBlock Text="{x:Bind strings:Resources.Settings}" Margin="4,0,0,0"/>
                                </StackPanel>
                            </muxc:Expander.Header>
                            <muxc:Expander.Content>
                                <StackPanel Orientation="Vertical">
                                    <Button x:Name="MicSettingsButton" Click="MicSettingsButton_Click" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition  Width="20"/>
                                                <ColumnDefinition  Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular" Glyph="&#xF548;"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind strings:Resources.MicSettings}" Margin="8,0,0,0" TextWrapping="WrapWholeWords"/>
                                        </Grid>
                                    </Button>
                                    <ToggleSwitch x:Name="GalleryToggleSwitch" Header="{x:Bind strings:Resources.GalleryView}" Margin="8" MaxWidth="150" IsOn="True"/>
                                    <ToggleSwitch x:Name="OpenFolderToggleSwitch" Header="{x:Bind strings:Resources.OpenFolder}" Margin="8" MaxWidth="150" IsOn="False"/>
                                    <ToggleSwitch x:Name="SystemPlayerToggleSwitch" Header="{x:Bind strings:Resources.SystemVideoPlayerOption}" Margin="8" MaxWidth="150" IsOn="False"/>
                                    <ToggleSwitch x:Name="OverlayToggleSwitch" Header="{x:Bind strings:Resources.OverlayMode}" Margin="8" MaxWidth="150" IsOn="False" />
                                    <Button x:Name="AboutButton" Width="144" HorizontalAlignment="Center" Margin="8" Style="{StaticResource ButtonRevealStyle}" Click="AboutButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <FontIcon FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular" Glyph="&#xF4A3;" Margin="0,0,8,0"/>
                                            <TextBlock Text="{x:Bind strings:Resources.About}"/>
                                        </StackPanel>

                                    </Button>

                                </StackPanel>
                            </muxc:Expander.Content>                                 
                        </muxc:Expander>                        
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>