<Page
    x:Class="FluentScreenRecorder.Views.VideoPreviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentScreenRecorder.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:FluentScreenRecorder.Strings"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <MediaPlayerElement
                x:Name="PreviewPlayer"
                Margin="0,32,0,0"
                AreTransportControlsEnabled="True"
                AutoPlay="True">
                <MediaPlayerElement.TransportControls>
                    <MediaTransportControls
                        IsCompact="True"
                        IsFullWindowButtonVisible="False"
                        IsFullWindowEnabled="False"
                        ShowAndHideAutomatically="True"
                        IsZoomButtonVisible="False" />
                </MediaPlayerElement.TransportControls>
            </MediaPlayerElement>
        </Grid>

        <Grid Grid.Row="1" Margin="0,5">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="SaveButton"
                    Margin="5"
                    AutomationProperties.Name="{x:Bind strings:Resources.Save}"
                    Click="SaveButton_Click"
                    Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular"
                            FontSize="16"
                            Glyph="&#xF67F;" />
                        <TextBlock Text="{x:Bind strings:Resources.Save}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="SaveAsButton"
                    Margin="5"
                    AutomationProperties.Name="{x:Bind strings:Resources.SaveAs}"
                    Click="SaveAsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular"
                            FontSize="16"
                            Glyph="&#xFC52;" />
                        <TextBlock Text="{x:Bind strings:Resources.SaveAs}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="Share"
                    Margin="5"
                    AutomationProperties.Name="{x:Bind strings:Resources.Share}"
                    Click="Share_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular"
                            FontSize="16"
                            Glyph="&#xF6AF;" />
                        <TextBlock Text="{x:Bind strings:Resources.Share}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="Cancel"
                    Margin="5"
                    AutomationProperties.Name="{x:Bind strings:Resources.Delete}"
                    Click="Cancel_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            FontFamily="/Assets/Fonts/FluentSystemIcons-Regular.ttf#FluentSystemIcons-Regular"
                            FontSize="16"
                            Glyph="&#xF34C;" />
                        <TextBlock Text="{x:Bind strings:Resources.Delete}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>