        </Grid>
        
        <Button VerticalAlignment="Top" x:Name="BackButton"
                CornerRadius="5"
                Height="28"
                Margin="4,4,0,0"
                Canvas.ZIndex="2"
                Click="BackButton_Click"
                Background="Transparent"
                BorderThickness="0"
                Width="40"
                AutomationProperties.Name="Back"
                AutomationProperties.AutomationId="BackButton"
                AutomationProperties.ItemType="Navigation Button">
            <muxc:AnimatedIcon x:Name="BackAnimatedIcon" Height="16" Width="16">
                <muxc:AnimatedIcon.Source>
                    <animatedvisuals:AnimatedBackVisualSource/>
                </muxc:AnimatedIcon.Source>
                <muxc:AnimatedIcon.FallbackIconSource>
                    <muxc:SymbolIconSource Symbol="Back"/>
                </muxc:AnimatedIcon.FallbackIconSource>
            </muxc:AnimatedIcon>
        </Button>
        
        <ScrollViewer Background="{StaticResource LayerFillColorDefaultBrush}" Grid.Row="1" Padding="40,12,40,0">
            <Grid x:Name="MainGrid" ColumnSpacing="32" Padding="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition x:Name="Column1" Width="0.4*" MaxWidth="240" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Vertical" Spacing="3">
                    <TextBlock Text="Settings" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,12" />

                    <TextBlock Text="General" Margin="0,8" />

                    <settings:Setting Description="Show your recorded videos." Header="{x:Bind strings:Resources.GalleryView}">
                        <settings:Setting.ActionContent>
                            <ToggleSwitch Margin="0,0,-70,0" IsOn="{x:Bind local1:App.Settings.Gallery, Mode=TwoWay}" />
                        </settings:Setting.ActionContent>
                    </settings:Setting>

                    <settings:Setting Header="Audio recording mode">
                        <settings:Setting.ActionContent>
                            <ComboBox x:Name="AudioModeComboBox" SelectionChanged="AudioMode_SelectionChanged">
                                <x:String>Internal (Speaker)</x:String>
                                <x:String>External (Microphone)</x:String>
                            </ComboBox>
                        </settings:Setting.ActionContent>
                    </settings:Setting>

                    <settings:Setting Description="The amount of video data transferred for a unit of time." Header="{x:Bind strings:Resources.Bitrate}">
                        <settings:Setting.ActionContent>
                            <ComboBox x:Name="BitrateComboBox" ItemsSource="{x:Bind local1:App.RecViewModel.Bitrates}" SelectionChanged="BitrateComboBox_SelectionChanged" HorizontalAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:BitrateItem">
                                        <TextBlock Text="{x:Bind DisplayName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </settings:Setting.ActionContent>
                    </settings:Setting>

                    <TextBlock Text="Advanced" Margin="0,20,0,8" />

                    <settings:Setting Description="Open recorded videos in the system default video player." Header="{x:Bind strings:Resources.SystemVideoPlayerOption}">
                        <settings:Setting.ActionContent>
                            <ToggleSwitch Margin="0,0,-70,0" IsOn="{x:Bind local1:App.Settings.SystemPlayer, Mode=TwoWay}" />
                        </settings:Setting.ActionContent>
                    </settings:Setting>

                    <settings:Setting Description="Overlay on top of other windows." Header="{x:Bind strings:Resources.OverlayMode}">
                        <settings:Setting.ActionContent>
                            <ToggleSwitch Margin="0,0,-70,0" IsOn="{x:Bind local1:App.Settings.ShowOnTop, Mode=TwoWay}" />
                        </settings:Setting.ActionContent>
                    </settings:Setting>

                    <Button HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Padding="16"
                            Click="SystemMic_Click">
                        <RelativePanel>
                            <TextBlock Text="System microphone settings" />

                            <FontIcon Glyph="&#xE8A7;"
                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                      RelativePanel.AlignRightWithPanel="True"
                                      FontSize="16" />
                        </RelativePanel>
                    </Button>

                    <StackPanel x:Name="AboutFooter">
                        <TextBlock Text="About" FontWeight="SemiBold" Margin="0,20,0,4" />

                        <HyperlinkButton Margin="-3,0,0,0" Padding="3" Content="{x:Bind strings:Resources.GitHub}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder"/>
                        <HyperlinkButton Margin="-3,0,0,0" Padding="3" Content="{x:Bind strings:Resources.Discord}" NavigateUri="https://discord.gg/v4EXAwXPHw"/>
                        <HyperlinkButton Margin="-3,0,0,0" Padding="3" Content="{x:Bind strings:Resources.Privacy}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder/blob/master/PRIVACY.md"/>
                        <HyperlinkButton Margin="-3,0,0,0" Padding="3" Content="{x:Bind strings:Resources.Copyright}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder/blob/master/LICENSE"/>
                        <HyperlinkButton Margin="-3,0,0,0" Padding="3" Content="{x:Bind strings:Resources.Donate}" NavigateUri="https://paypal.me/FilippoFedeli"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="{x:Bind strings:Resources.Version}"/>
                            <TextBlock Text="{x:Bind GetAppVersion()}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Padding="0,52,0,0" Grid.Column="1">
                    <TextBlock Text="About" FontWeight="SemiBold" Margin="0,0,0,4" />

                    <HyperlinkButton Margin="-4,0,0,0" Padding="4" Content="{x:Bind strings:Resources.GitHub}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder"/>
                    <HyperlinkButton Margin="-4,0,0,0" Padding="4" Content="{x:Bind strings:Resources.Discord}" NavigateUri="https://discord.gg/v4EXAwXPHw"/>
                    <HyperlinkButton Margin="-4,0,0,0" Padding="4" Content="{x:Bind strings:Resources.Privacy}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder/blob/master/PRIVACY.md"/>
                    <HyperlinkButton Margin="-4,0,0,0" Padding="4" Content="{x:Bind strings:Resources.Copyright}" NavigateUri="https://github.com/MarcAnt01/Fluent-Screen-Recorder/blob/master/LICENSE"/>
                    <HyperlinkButton Margin="-4,0,0,0" Padding="4" Content="{x:Bind strings:Resources.Donate}" NavigateUri="https://paypal.me/FilippoFedeli"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{x:Bind strings:Resources.Version}"/>
                        <TextBlock Text="{x:Bind GetAppVersion()}" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
